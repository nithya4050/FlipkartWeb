@model FlipkartWeb.Models.AuthendModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Registration";
}


@{
    Layout = "_AuthLayout";
}

<h2 id="Alig">Register</h2>

@* @using (Html.BeginForm("Registrationpost", "Authend", FormMethod.Post, new { data = Model }))
